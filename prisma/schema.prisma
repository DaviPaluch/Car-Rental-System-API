// schema.prisma

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  password_hash String

  avatar avatar?
}

model avatar {
  id         String  @id @default(uuid())
  userId     String  @unique
  user       user    @relation(fields: [userId], references: [id])
  nameFile   String?
  avatarFile String?
  typeFile   String?
}

model classificacao {
  id    String @id @default(uuid())
  label String @unique
}
